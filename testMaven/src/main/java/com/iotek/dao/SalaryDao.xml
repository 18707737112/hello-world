<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.iotek.dao.SalaryDao">
    <insert id="addSalary">
        insert into T_SALARY
        values (SEQ_SALARY.nextval,#{e_id},#{s_date},#{s_performance},
                #{s_extra},#{s_s_insurance},#{s_total},#{s_is_trouble})
    </insert>
    <update id="updateSalary">
        update T_SALARY
        <set>
            <if test="e_id!=null">
                e_id=#{e_id},
            </if>
            <if test="s_date!=null">
                s_date=#{s_date},
            </if>
            <if test="s_performance!=null">
                s_performance=#{s_performance},
            </if>
            <if test="s_extra!=null">
                s_extra=#{s_extra},
            </if>
            <if test="s_s_insurance!=null">
                s_s_insurance=#{s_s_insurance},
            </if>
            <if test="s_total!=null">
                s_total=#{s_total},
            </if>
            <if test="s_is_trouble!=null">
                s_is_trouble=#{s_is_trouble},
            </if>
        </set>
        <where>
            <choose>
                <when test="s_id!=null and s_id!=0">
                    s_id=#{s_id}
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
        </where>
    </update>
    <delete id="delSalary">
        delete from T_SALARY where S_ID=#{0}
    </delete>
    <select id="getSalary" resultType="com.iotek.model.Salary">
        select * from T_SALARY
        <where>
            <choose>
                <when test="s_id!=null and s_id!=0">
                    s_id=#{s_id}
                </when>
                <when test="e_id!=null and e_id!=0">
                    e_id=#{e_id}
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
        </where>
    </select>
</mapper>