<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.iotek.dao.PositionDao">
    <insert id="addPosition">
        insert into T_POSITION
        values (SEQ_POSITION.nextval,#{dep_id},#{e_id},#{pos_name})
    </insert>
    <update id="updatePosition">
        update T_POSITION
        <set>
            <if test="dep_id!=null">
                dep_id=#{dep_id},
            </if>
            <if test="e_id!=null">
                e_id=#{e_id},
            </if>
            <if test="pos_name!=null">
                pos_name=#{pos_name},
            </if>
        </set>
        <where>
            <choose>
                <when test="pos_id!=null and pos_id!=0">
                    pos_id=#{pos_id}
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
        </where>
    </update>
    <delete id="delPosition">
        delete from T_POSITION where POS_ID=#{0}
    </delete>
    <select id="getPosition" resultType="com.iotek.model.Position">
        select * from T_POSITION
        <where>
            <choose>
                <when test="pos_id!=null and pos_id!=0">
                    pos_id=#{pos_id}
                </when>
                <when test="dep_id!=null and dep_id!=0">
                    dep_id=#{dep_id}
                </when>
                <when test="e_id!=null and e_id!=0">
                    e_id=#{e_id}
                </when>
                <when test="pos_name!=null and pos_name!=''">
                    pos_name=#{pos_name}
                </when>
                <otherwise>
                    1=1
                </otherwise>
            </choose>
        </where>
    </select>
</mapper>