<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.iotek.dao.CustomerDao">
    <insert id="addCustomer">
        insert into T_CUSTOMER
        values (SEQ_CUSTOMER.nextval,#{c_account},#{c_pass})
    </insert>
    <select id="getCustomer" resultType="com.iotek.model.Customer">
        select * from T_CUSTOMER
        <where>
            <if test="c_pass!=null and c_pass!=''">
                and c_pass=#{c_pass}
            </if>
            <if test="c_account!=null and c_account!=''">
                and c_account=#{c_account}
            </if>
            <if test="c_id!=null and c_id!=0">
                and c_id=#{c_id}
            </if>
        </where>
    </select>
</mapper>