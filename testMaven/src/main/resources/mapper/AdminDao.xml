<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.project.eefinal.dao.AdminDao">
    <insert id="addAdmin">
        insert into T_ADMIN
        values (ADMIN_SEQ.nextval,#{name},#{pass})
    </insert>
    <select id="queryAdmin" resultType="com.project.eefinal.model.Admin" resultMap="adminMap">
        select * from T_ADMIN
        <where>
            <if test="id!=null">
                and  A_ID=#{id}
            </if>
            <if test="name!=null">
                and  A_NAME=#{name}
            </if>
            <if test="pass!=null">
                and  A_PASS=#{pass}
            </if>
        </where>
    </select>
    <resultMap id="adminMap" type="com.project.eefinal.model.Admin">
        <id property="id" column="A_ID"/>
        <result property="name" column="A_NAME"/>
        <result property="pass" column="A_PASS"/>
    </resultMap>
</mapper>